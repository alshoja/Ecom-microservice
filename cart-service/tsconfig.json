{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "target": "es2019",
    "outDir": "./dist",
    "baseUrl": "./src",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2019"],
    "strict": true,
    "inlineSources": true,
    "types": ["node"],
    "noImplicitAny": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "incremental": true
  },
  "include": ["src/**/*.ts", "src/app.ts"],
  "exclude": ["node_modules"]
}
